{
  "compilerOptions": {
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": [
    "src/*.ts",
    "src/*.ejs",
    "src/**/*.ts",
    "src/**/*.ejs"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "gulpfile.js",
  ]
}
