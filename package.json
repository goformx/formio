{
  "name": "goforms-template",
  "version": "1.0.0",
  "description": "GoForms template for Form.io",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "vite build && tsc",
    "dev": "vite",
    "clean": "rimraf lib dist",
    "postinstall": "husky",
    "test:coverage": "nyc --reporter=text mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "test": "mocha --require ts-node/register --reporter spec './{,!(node_modules)/**/}*.spec.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format:check": "prettier --check \"**/*.{ts,js,json}\""
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "keywords": [
    "formio",
    "goforms",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "husky": "^9.0.11",
    "mocha": "^10.3.0",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^5.1.3"
  },
  "dependencies": {
    "@formio/js": "^5.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "@formio/js": {
      "glob": "^10.3.10"
    }
  }
}
