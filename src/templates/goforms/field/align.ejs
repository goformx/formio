<% const cssClasses = require('../cssClasses'); %>
<div class="<%= cssClasses['form-field-wrapper'] %> <%= ctx.isRightPosition ? cssClasses['form-field-wrapper-reverse'] : '' %>">
  {% if (!ctx.label.hidden) { %}
    <div class="<%= cssClasses['form-field-label'] %> <%= ctx.isRightAlign ? cssClasses['form-field-label-right'] : '' %>" style="<%= ctx.labelStyles %>">
      {{ ctx.labelMarkup }}
    </div>
  {% } %}

  {% if (ctx.label.hidden && ctx.label.className && ctx.component.validate.required) { %}
    <div class="<%= cssClasses['form-field-label'] %> <%= ctx.isRightAlign ? cssClasses['form-field-label-right'] : '' %>" style="<%= ctx.labelStyles %>">
      <label class="<%= cssClasses['form-field-hidden-label'] %> <%= ctx.label.className %>"></label>
    </div>
  {% } %}

  <div class="<%= cssClasses['form-field-content'] %>" style="<%= ctx.contentStyles %>">
    {{ ctx.element }}
  </div>
</div>

{% if (ctx.component.description) { %}
  <div class="<%= cssClasses['form-field-description'] %>">
    {{ ctx.t(ctx.component.description, { _userInput: true }) }}
  </div>
{% } %}
