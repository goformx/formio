<% const cssClasses = require('../cssClasses'); %>
<div class="{{ cssClasses['form-pdf-builder-upload'] }}">
  <h3 class="{{ cssClasses['form-label'] }}">{{ctx.t('uploadPdfFile')}}</h3>
  <input type="file" style="opacity: 0; position: absolute;" tabindex="-1" accept=".pdf" ref="hiddenFileInputElement">
  <div class="{{ cssClasses['form-pdf-builder-upload-dropzone'] }}" ref="fileDrop">
    <span ref="dragDropText">
      <i class="{{ctx.iconClass('cloud-upload')}}"></i>{{ctx.t('dropToStart')}} <a href="#" ref="fileBrowse" class="{{ cssClasses['form-pdf-builder-upload-browse'] }}">{{ctx.t('browse')}}</a>
    </span>
    <div class="{{ cssClasses['form-pdf-builder-upload-progress'] }}" ref="uploadProgressWrapper" style="display:none;">
      <div class="{{ cssClasses['form-pdf-builder-upload-progress-bar'] }}" ref="uploadProgress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
  </div>
  <div class="{{ cssClasses['form-message'] }} {{ cssClasses['form-message-error'] }}" ref="uploadError">
  </div>
</div>

