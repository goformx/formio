<div class="form-builder-edit">
  <div class="form-builder-edit-header">
    <div class="form-builder-edit-title">
      {{ctx.component.label}}
    </div>
    <button type="button" class="form-builder-edit-close" ref="closeButton" aria-label="{{ctx.t('close')}}">
      <i class="{{ctx.iconClass('close')}}"></i>
    </button>
  </div>
  <div class="form-builder-edit-content">
    <div class="form-builder-edit-tabs">
      {% for (var tab in ctx.tabs) { %}
        <button 
          type="button" 
          class="form-builder-edit-tab {% if (tab === ctx.activeTab) { %}active{% } %}" 
          data-tab="{{tab}}"
          aria-selected="{{tab === ctx.activeTab ? 'true' : 'false'}}"
          aria-controls="panel-{{tab}}"
        >
          {{ctx.tabs[tab].label}}
        </button>
      {% } %}
    </div>
    <div class="form-builder-edit-panel" id="panel-{{ctx.activeTab}}">
      {{ctx.panel}}
    </div>
  </div>
  <div class="form-builder-edit-footer">
    <button type="button" class="form-builder-edit-cancel" ref="cancelButton">{{ctx.t('cancel')}}</button>
    <button type="button" class="form-builder-edit-save" ref="saveButton">{{ctx.t('save')}}</button>
  </div>
</div>
