<% const cssClasses = require('../cssClasses'); %>
<div class="{{ cssClasses['form-modal'] }}">
  <div ref="overlay" class="{{ cssClasses['form-modal-backdrop'] }}"></div>
  <div ref="content" class="{{ cssClasses['form-modal-content'] }}">
    <button
      ref="close"
      type="button"
      role="button"
      class="{{ cssClasses['form-modal-close'] }}">
      {{ctx.t('close')}}
    </button>
    <div ref="inner" class="{{ cssClasses['form-modal-body'] }}"></div>
  </div>
</div>
