<div class="{{ ctx.cssClasses['form-tree-edit'] }}">
  <div ref="nodeEdit" class="{{ ctx.cssClasses['form-tree-edit-content'] }}">{{ ctx.children }}</div>
  {% if (!ctx.readOnly) { %}
    <div class="{{ ctx.cssClasses['form-tree-edit-actions'] }}">
      <button ref="saveNode" class="{{ ctx.cssClasses['form-tree-edit-save'] }}">{{ ctx.t('save') }}</button>
      <button ref="cancelNode" class="{{ ctx.cssClasses['form-tree-edit-cancel'] }}">{{ ctx.t('cancel') }}</button>
    </div>
  {% } %}
</div>
