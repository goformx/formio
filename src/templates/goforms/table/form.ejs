<% const cssClasses = require('../cssClasses'); %>
<table class="{{ cssClasses['form-table'] }}
    {{ ctx.component.striped ? ' ' + cssClasses['form-table-striped'] : ''}}
    {{ ctx.component.bordered ? ' ' + cssClasses['form-table-bordered'] : ''}}
    {{ ctx.component.hover ? ' ' + cssClasses['form-table-hover'] : ''}}
    {{ ctx.component.condensed ? ' ' + cssClasses['form-table-condensed'] : ''}}
  ">
  <caption class="{{ cssClasses['form-table-caption'] }}">{{ctx.t(ctx.component.label)}}</caption>
  {% if (ctx.component.header && ctx.component.header.length > 0) { %}
  <thead class="{{ cssClasses['form-table-header'] }}">
    <tr class="{{ cssClasses['form-table-row'] }}">
      {% ctx.component.header.forEach(function(header) { %}
      <th class="{{ cssClasses['form-table-header-cell'] }}" scope="col">{{ctx.t(header)}}</th>
      {% }) %}
    </tr>
  </thead>
  {% } %}
  <tbody class="{{ cssClasses['form-table-body'] }}">
    {% ctx.tableComponents.forEach(function(row, rowIndex) { %}
    <tr class="{{ cssClasses['form-table-row'] }}" ref="row-{{ctx.id}}">
      {% row.forEach(function(column, colIndex) { %}
      <td class="{{ cssClasses['form-table-cell'] }}{% if (ctx.cellClassName) { %} {{ctx.cellClassName}}{% } %}" scope="col" ref="{{ctx.tableKey}}-{{rowIndex}}">{{column}}</td>
      {% }) %}
    </tr>
    {% }) %}
  </tbody>
</table>
