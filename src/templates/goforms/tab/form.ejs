<div class="{{ ctx.cssClasses['form-tab'] }}{{ ctx.component.verticalLayout ? ' ' + cssClasses['form-tab-vertical'] : ''}}">
  <div class="{{ ctx.cssClasses['form-tab-header'] }}">
    <ul class="{{ ctx.cssClasses['form-tab-navigation'] }}{{ ctx.component.verticalLayout ? ' ' + cssClasses['form-tab-navigation-vertical'] : ''}}" role="tablist">
      {% ctx.component.components.forEach(function(tab, index) { %}
      <li class="{{ ctx.cssClasses['form-tab-item'] }}{{ctx.currentTab === index ? ' ' + cssClasses['form-tab-item-active'] : ''}}" role="tab" ref="{{ctx.tabLikey}}">
        <a
            class="{{ ctx.cssClasses['form-tab-link'] }}{{ctx.currentTab === index ? ' ' + cssClasses['form-tab-link-active'] : ''}}{{ ctx.component.verticalLayout ? ' ' + cssClasses['form-tab-link-vertical'] : ''}}"
            href="#{{tab.key}}"
            ref="{{ctx.tabLinkKey}}"
        >
          {{ctx.t(tab.label, { _userInput: true })}}
        </a>
      </li>
      {% }) %}
    </ul>
  </div>
  {% ctx.component.components.forEach(function(tab, index) { %}
  <div
    role="tabpanel"
    class="{{ ctx.cssClasses['form-tab-panel'] }}"
    style="display: {{ctx.currentTab === index ? 'block' : 'none'}}"
    ref="{{ctx.tabKey}}"
  >
    {{ctx.tabComponents[index]}}
  </div>
  {% }) %}
</div>
